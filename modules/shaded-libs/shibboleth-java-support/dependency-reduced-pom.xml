<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>shaded-libs</artifactId>
    <groupId>org.wso2.appserver</groupId>
    <version>6.0.0-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.wso2.appserver.shade.net.shibboleth.utilities</groupId>
  <artifactId>shibboleth-java-support-shaded</artifactId>
  <version>7.2.0.wso2v1-SNAPSHOT</version>
  <url>http://wso2.com</url>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <relocations>
                <relocation>
                  <pattern>org.slf4j</pattern>
                  <shadedPattern>org.shaded.slf4j</shadedPattern>
                </relocation>
              </relocations>
              <artifactSet>
                <excludes>
                  <exclude>com.google.code.findbugs:jsr305:jar:</exclude>
                  <exclude>com.google.guava:guava:jar:</exclude>
                  <exclude>commons-codec:commons-codec:jar:</exclude>
                  <exclude>joda-time:joda-time:jar:</exclude>
                  <exclude>org.slf4j:slf4j-api:jar:</exclude>
                </excludes>
              </artifactSet>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>

