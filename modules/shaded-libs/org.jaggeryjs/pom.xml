<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <parent>
        <groupId>org.wso2.appserver</groupId>
        <artifactId>shaded-libs</artifactId>
        <version>6.0.0-SNAPSHOT</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.wso2.appserver.shade.org.jaggeryjs</groupId>
    <artifactId>org.jaggeryjs-shaded</artifactId>
    <version>0.13.0.wso2v1-SNAPSHOT</version>

    <dependencies>
        <dependency>
            <groupId>org.jaggeryjs</groupId>
            <artifactId>org.jaggeryjs.hostobjects.file</artifactId>
        </dependency>
        <dependency>
            <groupId>org.jaggeryjs</groupId>
            <artifactId>org.jaggeryjs.hostobjects.jaggeryparser</artifactId>
        </dependency>
        <dependency>
            <groupId>org.jaggeryjs</groupId>
            <artifactId>org.jaggeryjs.hostobjects.log</artifactId>
        </dependency>
        <dependency>
            <groupId>org.jaggeryjs</groupId>
            <artifactId>org.jaggeryjs.hostobjects.oauth</artifactId>
        </dependency>
        <dependency>
            <groupId>org.jaggeryjs</groupId>
            <artifactId>org.jaggeryjs.hostobjects.stream</artifactId>
        </dependency>
        <dependency>
            <groupId>org.jaggeryjs</groupId>
            <artifactId>org.jaggeryjs.hostobjects.uri</artifactId>
        </dependency>
        <dependency>
            <groupId>org.jaggeryjs</groupId>
            <artifactId>org.jaggeryjs.hostobjects.web</artifactId>
        </dependency>
        <dependency>
            <groupId>org.jaggeryjs</groupId>
            <artifactId>org.jaggeryjs.hostobjects.xhr</artifactId>
        </dependency>
        <dependency>
            <groupId>org.jaggeryjs</groupId>
            <artifactId>org.jaggeryjs.hostobjects.xslt</artifactId>
        </dependency>
        <dependency>
            <groupId>org.jaggeryjs</groupId>
            <artifactId>org.jaggeryjs.jaggery.core</artifactId>
        </dependency>
        <dependency>
            <groupId>org.jaggeryjs</groupId>
            <artifactId>org.jaggeryjs.scriptengine</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <relocations>
                                <relocation>
                                    <pattern>org.apache.commons.logging</pattern>
                                    <shadedPattern>shaded.org.apache.commons.logging</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>org.apache.log4j</pattern>
                                    <shadedPattern>shaded.org.apache.log4j</shadedPattern>
                                </relocation>
                            </relocations>
                            <artifactSet>
                                <excludes>
                                    <exclude>commons*</exclude>
                                    <exclude>org.eclipse.wst.jsdt</exclude>
                                    <exclude>rhino.wso2</exclude>
                                    <exclude>org.mozilla</exclude>
                                    <exclude>org.apache.commons.ssl</exclude>
                                    <exclude>org.eclipse.equinox</exclude>
                                    <exclude>org.wso2.carbon</exclude>
                                    <exclude>org.apache.tomcat*</exclude>
                                    <exclude>com.google.*</exclude>
                                    <exclude>javax.activation</exclude>
                                    <exclude>net.jcip</exclude>
                                    <exclude>dom4j</exclude>
                                    <exclude>xml-apis</exclude>
                                    <exclude>org.ow2.asm*</exclude>
                                    <exclude>com.apple</exclude>
                                    <exclude>jaxen</exclude>
                                    <exclude>com.google.code.gson</exclude>
                                    <exclude>org.eclipse.wst.jsdt</exclude>
                                    <exclude>org.apache.geronimo.specs*</exclude>
                                    <exclude>org.wso2.uri.template</exclude>
                                    <exclude>org.eclipse.jdt.core.compiler</exclude>
                                    <exclude>org.codehaus.woodstox</exclude>
                                    <exclude>org.apache.ws.commons.axiom.wso2</exclude>
                                    <exclude>com.google.code.*</exclude>
                                    <exclude>com.googlecode.json-simple.wso2</exclude>
                                </excludes>
                            </artifactSet>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>