<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>shaded-libs</artifactId>
    <groupId>org.wso2.appserver</groupId>
    <version>6.0.0-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.wso2.appserver.shade.org.wso2.carbon.analytics-common</groupId>
  <artifactId>org.wso2.carbon.databridge.agent-shaded</artifactId>
  <version>5.0.8.wso2v1-SNAPSHOT</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <relocations>
                <relocation>
                  <pattern>org.apache.commons.logging</pattern>
                  <shadedPattern>shaded.org.apache.commons.logging</shadedPattern>
                </relocation>
              </relocations>
              <artifactSet>
                <excludes>
                  <exclude>org.wso2.carbon.analytics-common:org.wso2.carbon.databridge.commons</exclude>
                  <exclude>org.wso2.carbon.analytics-common:org.wso2.carbon.databridge.commons.thrift</exclude>
                  <exclude>org.wso2.carbon.analytics-common:org.wso2.carbon.databridge.commons.binary</exclude>
                  <exclude>commons-pool.wso2:commons-pool</exclude>
                  <exclue>commons-pool:commons-pool</exclue>
                  <exclue>org.wso2.orbit.org.apache.httpcomponents:httpclient</exclue>
                  <exclue>org.wso2.orbit.com.lmax:disruptor</exclue>
                  <exclue>com.google.code.gson:gson</exclue>
                  <exclue>org.json.wso2:json</exclue>
                  <exclue>libthrift.wso2</exclue>
                  <exclue>org.apache.thrift:libthrift</exclue>
                  <exclue>org.apache.httpcomponents</exclue>
                  <exclue>commons-codec:commons-codec</exclue>
                  <exclue>org.apache.httpcomponents:httpcore</exclue>
                  <exclue>slf4j.wso2:slf4j</exclue>
                  <exclue>org.slf4j:slf4j-api</exclue>
                  <exclue>commons-logging:commons-logging</exclue>
                </excludes>
              </artifactSet>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>

