<project default="build-all">

    <property name="wso2appserver.home" value="../../../"/>
    <property name="repo.location" value="${wso2appserver.home}/repository/deployment/server"/>
    <property name="warName" value="mtom_jaxws.war"/>
    <property name="build.dir" value="build"/>
    <property name="classes" value="${build.dir}/classes"/>
    <property name="genCode" value="${build.dir}/generated-sources"/>
    <property name="lib" value="${build.dir}/lib"/>
    <property name="webapps" value="${build.dir}/webapps"/>

    <path id="compile.classpath">
        <fileset dir="${lib}">
            <include name="*.jar"/>
        </fileset>
    </path>

    <path id="cxf.classpath">
        <fileset dir="${lib}">
            <include name="*.jar"/>
        </fileset>
    </path>

    <target name="init" depends="clean">

        <mkdir dir="${build.dir}"/>
        <mkdir dir="${classes}"/>
        <mkdir dir="${genCode}"/>
        <mkdir dir="${webapps}"/>
        <mkdir dir="${lib}"/>

        <copy toDir="${lib}">
 	    <fileset dir="${wso2appserver.home}/lib/runtimes/cxf/">
                <include name="*.jar"/>
            </fileset>
        </copy>
        <antcall target="download.jars"/>
    </target>

    <target name="cxfWSDLToJava" depends="init">
        <echo message="Genarating WSDLToJava"/>
        <java classname="org.apache.cxf.tools.wsdlto.WSDLToJava" fork="true">
            <arg value="-client"/>
            <arg value="-d"/>
            <arg value="src"/>
            <arg value="src/main/resources/mtom_xop.wsdl"/>

            <classpath>
                <path refid="cxf.classpath"/>
            </classpath>

        </java>
        <javac destdir="${classes}" debug="true" srcdir="${genCode}">
            <classpath refid="compile.classpath"/>
        </javac>
    </target>


    <target name="compile-all" depends="cxfWSDLToJava" >
        <javac destdir="${classes}" debug="true" srcdir="src">
            <classpath refid="compile.classpath"/>
        </javac>
    </target>

    <target name="war" depends="compile-all">
        <echo message="Creating webapp ${warName}."/>
        <copy  todir="${classes}">
            <fileset dir="src/main/resources"/>
        </copy>
        <copy file="${basedir}/src/main/java/demo/mtom/client/me.bmp" todir="${classes}/demo/mtom/client"/>
        <war destfile="${webapps}/${warName}" webxml="src/main/webapp/WEB-INF/web.xml">
            <classes dir="${classes}"/>
            <fileset dir="src/main/webapp/">
		<include name="servicelist.css"/>
            </fileset>
	    <metainf  dir="src/main/webapp/META-INF"  
		    includes="webapp-classloading.xml" >
	    </metainf>
            <webinf dir="src/main/webapp/WEB-INF"
                    includes="cxf-servlet.xml">
            </webinf>
        </war>
    </target>

    <target name="build-all" depends ="war">
        <echo message="Copying the created war file in to the deployment directory"/>
        <copy file="${webapps}/${warName}" todir="${repo.location}/webapps"/>
    </target>

    <target name="download.jars">
        <echo message="Downloading geronimo-javamail jar. "/>
        <get src="http://repo2.maven.org/maven2/org/apache/geronimo/specs/geronimo-javamail_1.4_spec/1.7.1/geronimo-javamail_1.4_spec-1.7.1.jar"
             dest="${lib}" verbose="true" skipexisting="true"/>
    </target>

    <target name="clean">
        <delete dir="${build.dir}" />
        <delete dir="./lib" />
    </target>

</project>
