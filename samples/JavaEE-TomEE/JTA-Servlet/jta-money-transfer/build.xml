<project name="jta-money-transfer" default="build-all">

    <property name="wso2carbon.home" value="../../../../"/>
    <property name="warName" value="jta-money-transfer.war"/>
    <property name="build.dir" value="build"/>

    <path id="compile.classpath">
        <fileset dir="${wso2carbon.home}/lib">
            <include name="*.jar"/>
        </fileset>
    </path>

    <target name="clean">
        <delete dir="${build.dir}"/>
    </target>

    <target name="init" depends="clean">
        <mkdir dir="${build.dir}/classes"/>
        <mkdir dir="src/main/webapp/WEB-INF/lib/"/>
        <copy todir="${build.dir}/classes">
            <fileset dir="src/main/resources"/>
        </copy>
        <antcall target="download.jars"/>
    </target>

    <target name="compile" depends="init">
        <javac destdir="${build.dir}/classes" debug="true" srcdir="src">
            <classpath refid="compile.classpath"/>
        </javac>
    </target>

    <target name="war" depends="compile">
        <echo message="Creating webapp ${warName}."/>
        <war destfile="${build.dir}/${warName}" webxml="src/main/webapp/WEB-INF/web.xml">
            <fileset dir="src/main/webapp"/>
            <classes dir="${build.dir}/classes"/>
        </war>
    </target>

    <target name="build-all" depends="war">
        <echo message="Copying the created war file in to the deployment directory"/>
        <antcall target="copy-webapp"/>
    </target>

    <target name="copy-webapp">
        <copy file="${build.dir}/${warName}" toDir="${wso2carbon.home}/webapps"/>
    </target>

    <target name="download.jars">
        <get src="http://maven.wso2.org/nexus/content/groups/wso2-public//com/h2database/h2/1.4.180/h2-1.4.180.jar"
             dest="src/main/webapp/WEB-INF/lib" verbose="true" skipexisting="true"/>
        <get src="http://maven.wso2.org/nexus/content/groups/wso2-public//commons-logging/commons-logging/1.1.1/commons-logging-1.1.1.jar"
             dest="src/main/webapp/WEB-INF/lib" verbose="true" skipexisting="true"/>
    </target>

</project>
